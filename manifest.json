{
  "manifest_version": 3,
  "name": "ChatGPT Chat Search",
  "version": "1.0",
  "description": "Search inside ChatGPT chats",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}
